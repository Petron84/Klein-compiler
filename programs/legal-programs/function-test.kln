function main(a:integer, b:integer, c:integer): integer
    if isZero(a) then
        if isPositive(b) then
            b + c
        else
            c - b
    else
        if isPositive(c) then
            a * c
        else
            a + b

function isZero(x:integer): boolean
    x == 0

function isPositive(x:integer): boolean
    x > 0
